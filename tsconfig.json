{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "ts-maps": ["./packages/ts-maps/src"],
      "ts-maps/*": ["./packages/ts-maps/src/maps/*"],
      "ts-maps-vue": ["./packages/vue/src"],
      "ts-maps-vue/*": ["./packages/vue/src/*"],
      "ts-maps-react": ["./packages/react/src"],
      "ts-maps-react/*": ["./packages/react/src/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["playground/**/*", "playground-nuxt/**/*", "**/dist/**/*", "**/node_modules/**/*", "packages/react/**/*"]
}
